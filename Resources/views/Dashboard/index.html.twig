<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Alfred Insight</title>

    <!-- Bootstrap Core CSS -->
    <link href="http://startbootstrap.com/templates/freelancer/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="http://startbootstrap.com/templates/freelancer/css/freelancer.css" rel="stylesheet" type="text/css">

    <!-- Fonts -->
    <link href="http://startbootstrap.com/templates/freelancer/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- IE8 support for HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <style>
      #submit {}
      #submit label {
        font-size: 25px;
      }
      #submit [type="text"] {
        width: 100%;
        font-size: 25px;
      }
      #submit span {
        font-size: 25px;
        font-weight: bold;
        position: absolute;
        right: 35%;
        bottom: 15%;
      }
    </style>
</head>

<body>
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="intro-text">
            <span class="name">Alfred Insights</span>
            <hr class="star-light">
          </div>
        </div>
      </div>
    </div>
  </header>
  <section>
    <div class="container">
      <div class="row">
        <form id="submit" method="get">
          <div class="col-lg-5">
            <label for="module_name">Module name</label><br />
            <input type="text" id="module_name" placeholder="Please enter a module name">
          </div>
          <div class="col-lg-2" style="height: 80px;">
            <span class="sep">- OR -</span>
          </div>
          <div class="col-lg-5 pull-right">
            <label for="site_name">Site name</label><br />
            <input type="text" id="site_name" placeholder="Please enter a site name">
          </div>
          <div class="col-lg-12 text-center">
            <br/>
            <input type="submit" value="Filter" class="btn btn-lrg btn-primary">
          </div>
        </form>
        <div class="row">
          <div class="col-lg-12">
            {% for site in sites %}
              <h3>{{ site.name }}</h3>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Version</th>
                    <th>Enabled</th>
                  </tr>
                </thead>
                <tbody>
                  {% for module in site.modules %}
                    <tr>
                      <td>{{ module.name }}</td>
                      <td>{{ module.version }}</td>
                      <td>{{ module.status }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            {% endfor %}
          </div>
      </div>
    </div>
  </section>
</body>
</html>
